{{ define "Files" }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EUREKAFILE - Files</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4">
        <!-- Service Title -->
        <h1 class="text-center mb-4 fw-bold" style="letter-spacing: 2px;">EUREKAFILE</h1>

        <!-- Navbar Include -->
        {{ template "Navbar" . }}

        <!-- Files Table -->
        <div class="card shadow p-4">
            <h2 class="mb-3 text-center">Uploaded Files</h2>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">File Name</th>
                            <th scope="col">Author</th>
                            <th scope="col">Date Uploaded</th>
                            <th scope="col">Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{ range .Files }}
                        <tr>
                            <td>{{ .Name }}</td>
                            <td>{{ .Author.Username }}</td>
                            <td>{{ .CreatedAt | formatDate }}</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="/files/{{ .Name }}" download>
                                    Download
                                </a>
                            </td>
                        </tr>
                        {{ else }}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No files uploaded yet.</td>
                        </tr>
                        {{ end }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{{ end }}
